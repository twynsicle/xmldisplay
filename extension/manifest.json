{
	"manifest_version": 2.1,
	"name":         "XmlDisplay",
	"version":      "1",
	"description":  "Displays debug XML with syntax highlighting and formatting.",
	"options_page": "options/options.html",
	"background" : {
		"persistent": false,
		"scripts": ["background.js"]
	},
	"permissions": [
		"activeTab", "tabs", "http://*/*", "storage", "<all_urls>"
	],
	"browser_action": {
	  "default_title": "xmlDisplay",
	  "default_icon": "icons/icon.png"
	},
	"content_scripts": [
		{
			"exclude_globs":    [  ],
			"include_globs":    [ "*" ],
			"matches": 			[ "<all_urls>" ],
			"js":               [ "libs/jquery-2.0.3.min.js", "libs/SettingsManager.js", "libs/FormatterSettings.js", "libs/XmlFormatter.js", "content.user.js" ],
			"run_at": 			"document_end"
		}
	],
	"web_accessible_resources": [
		"images/dots.png",

		"xmlDisplay.css",
		"xmlDisplay.js",
		"libs/jquery-2.0.3.min.js",

		"libs/FormatterSettings.ts",
		"libs/FormatterSettings.js.map",
		"libs/SettingsManager.ts",
		"libs/SettingsManager.js.map",
		"libs/XmlFormatter.ts",
		"libs/XmlFormatter.js.map"
	]
}